{
    "task_fields": [
        {
            "name": "title",
            "type": "string",
            "description": "A brief, descriptive title for the task",
            "required": true,
            "examples": ["Team meeting", "Client call", "Project deadline"]
        },
        {
            "name": "description",
            "type": "string",
            "description": "Detailed description of what the task involves",
            "required": true,
            "examples": ["Weekly team sync to discuss project progress", "Call with client to review deliverables"]
        },
        {
            "name": "due_date",
            "type": "datetime",
            "description": "When the task needs to be completed",
            "required": true,
            "examples": ["2024-01-23T17:00:00", "tomorrow at 3pm", "next Monday at 10am"]
        },
        {
            "name": "priority",
            "type": "string",
            "description": "The importance level of the task",
            "required": true,
            "enum": ["high", "medium", "low"],
            "examples": ["high priority for client deliverables", "medium priority for internal tasks"]
        },
        {
            "name": "status",
            "type": "string",
            "description": "Current state of the task",
            "required": true,
            "enum": ["not_started", "in_progress", "completed"],
            "default": "not_started"
        },
        {
            "name": "tags",
            "type": "array",
            "description": "Categories or labels for the task",
            "required": false,
            "examples": ["meeting", "client", "project", "deadline"]
        },
        {
            "name": "reminder",
            "type": "object",
            "description": "Reminder settings for the task",
            "required": false,
            "properties": {
                "time": "datetime",
                "type": "string",
                "notification_method": "string"
            }
        }
    ]
}
